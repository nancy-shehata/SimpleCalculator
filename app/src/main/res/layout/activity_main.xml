<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!--Result TextView-->


    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="end"
        android:textSize="32sp"
        android:padding="10dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:layout_marginBottom="20dp"/> <!--correct applied margin-->


    <!--grid layout for buttons-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_gravity="center"
        android:layout_marginTop="16dp">

        <!--Number button with yellow background and black text-->
        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="1"
            android:backgroundTint="@color/colorButtonNumber"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="2"
            android:backgroundTint="@color/colorButtonNumber"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="3"
            android:backgroundTint="@color/colorButtonNumber"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="+"
            android:backgroundTint="@color/colorButtonOperation"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="4"
            android:backgroundTint="@color/colorButtonNumber"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="5"
            android:backgroundTint="@color/colorButtonNumber"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="6"
            android:backgroundTint="@color/colorButtonNumber"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="-"
            android:backgroundTint="@color/colorButtonClear"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="7"
            android:backgroundTint="@color/colorButtonNumber"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="8"
            android:backgroundTint="@color/colorButtonNumber"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="9"
            android:backgroundTint="@color/colorButtonNumber"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="*"
            android:backgroundTint="@color/colorButtonClear"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="C"
            android:backgroundTint="@color/colorButtonClear"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="0"
            android:backgroundTint="@color/colorButtonNumber"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnDecimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text= "."
            android:backgroundTint="@color/colorButtonNumber"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text= "/"
            android:backgroundTint="@color/colorButtonClear"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"/>


        <Button
            android:id="@+id/btnEqual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="="
            android:backgroundTint="@color/colorButtonEqual"
            android:textColor="@android:color/black"
            android:layout_margin="8dp"/>

        </GridLayout>
    </LinearLayout>